rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Coleção: manuals - Regras completas para produção
    match /manuals/{manualId} {
      allow read, write: if request.auth != null && 
        (resource.data.author == request.auth.uid || 
         request.auth.uid in resource.data.reviewers ||
         request.auth.uid in resource.data.allowedUsers ||
         resource.data.isPublic == true ||
         request.auth.token.admin == true);
      
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.author;
      
      allow update: if request.auth != null && 
        (request.auth.uid == resource.data.author ||
         request.auth.uid in resource.data.reviewers ||
         request.auth.token.admin == true);
      
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.author;
      
      // Subcoleção: versions
      match /versions/{versionId} {
        allow read, write: if request.auth != null && 
          (resource.data.uploadedBy == request.auth.uid ||
           request.auth.uid in get(/databases/$(database)/documents/manuals/$(manualId)).data.reviewers ||
           request.auth.uid in get(/databases/$(database)/documents/manuals/$(manualId)).data.allowedUsers ||
           get(/databases/$(database)/documents/manuals/$(manualId)).data.isPublic == true);
      }
      
      // Subcoleção: feedback
      match /feedback/{feedbackId} {
        allow read: if request.auth != null && 
          (request.auth.uid == resource.data.author ||
           request.auth.uid == resource.data.reviewerId ||
           request.auth.uid in get(/databases/$(database)/documents/manuals/$(manualId)).data.reviewers);
        
        allow create, update: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/manuals/$(manualId)).data.reviewers;
      }
    }
    
    // Coleção: activities - Feed de atividades
    match /activities/{activityId} {
      allow read: if request.auth != null;
      
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Coleção: users - Dados de utilizador
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      allow read: if request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Coleção: system - Configurações do sistema (apenas admin)
    match /system/{document} {
      allow read, write: if request.auth != null && 
        request.auth.token.admin == true;
    }
  }
}